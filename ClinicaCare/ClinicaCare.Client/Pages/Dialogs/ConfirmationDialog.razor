@using ClinicaCare.Client.Services.Interfaces
@using MudBlazor
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<MudDialog>
    <DialogContent>
        @ConfirmationMessage
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Secondary">No</MudButton>
        <MudButton OnClick="Confirm" Color="Color.Primary">Yes</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public string ConfirmationMessage { get; set; } = "Are you sure?";

    [Parameter]
    public EventCallback<bool> OnConfirm { get; set; }

    private async Task Confirm()
    {
        await OnConfirm.InvokeAsync(true);
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog.Cancel();
}
