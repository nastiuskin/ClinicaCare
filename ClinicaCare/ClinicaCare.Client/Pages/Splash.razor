@using MudBlazor

<MudContainer Class="mud-splash-screen">
    <MudProgressCircular Indeterminate="true" Size="Size.Large" Color="Color.Primary" />
    <MudText Typo="Typo.h6" Align="Align.Center" Class="mt-4">@Message</MudText>
</MudContainer>

@code {
    [Parameter]
    public string Message { get; set; } = "Loading, please wait...";
}
