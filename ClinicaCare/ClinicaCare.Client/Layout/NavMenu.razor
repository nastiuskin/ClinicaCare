@using ClinicaCare.Client.Pages
@using ClinicaCare.Client.Pages.Dialogs
@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IDialogService DialogService


﻿<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ClinicaCare</a>
    </div>
</div>
<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <!-- Authorized User Links -->

            <AuthorizeView>
                <Authorized>
                  <div class="nav-item px-3">
                    <NavLink class="nav-link" href="profile">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> Profile
                    </NavLink>
                </div>

                   <div class="nav-item px-3">
                    <NavLink class="nav-link" @onclick="ShowLogoutConfirmation">
                        <span class="bi bi-box-arrow-right-fill-nav-menu" aria-hidden="true"></span> Logout
                    </NavLink>  
                </div>
                </Authorized>

            <!-- Unauthorized User Links -->
                <NotAuthorized>
                     <div class="nav-item px-3">
                        <NavLink class="nav-link" href="login">
                            <span class="bi bi-door-open-fill-nav-menu" aria-hidden="true"></span> Login
                        </NavLink>
                     </div>
                </NotAuthorized>
            </AuthorizeView>
    </nav>
 </div>

@code
{
    private async Task ShowLogoutConfirmation()
    {
        var options = new DialogOptions { CloseOnEscapeKey = true };
        var dialog = DialogService.Show<LogoutConfirmationDialog>("Logout Confirmation", options);
        var result = await dialog.Result;
    }
}
